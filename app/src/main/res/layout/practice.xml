<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp"
    android:background="@color/colorPrimaryLight"
    tools:context="com.codepath.snapmap.DetailBucketActivity">

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="New Text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_big_post"
        android:drawablePadding="-100dp"
        android:onClick="onOriginal"
        android:text="See Original Post"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <com.uber.sdk.android.rides.RideRequestButton
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_style" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_directions"
        android:drawablePadding="-130dp"
        android:onClick="onDirect"
        android:paddingLeft="18dp"
        android:text="Get Directions"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_share_p"
        android:drawablePadding="-100dp"
        android:onClick="onMessage"
        android:text="Share with Friends"
        android:textAllCaps="false"
        android:textSize="20dp" />

</LinearLayout>






